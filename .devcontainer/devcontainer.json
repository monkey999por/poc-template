{
    "name": "Claude Code Sandbox",
    "build": {
      "dockerfile": "Dockerfile",
      "args": {
        "TZ": "${localEnv:TZ:America/Los_Angeles}",
        "CLAUDE_CODE_VERSION": "latest",
        "GIT_DELTA_VERSION": "0.18.2",
        "ZSH_IN_DOCKER_VERSION": "1.2.0"
      }
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "anthropic.claude-code",
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode",
          "eamodio.gitlens"
        ],
        "settings": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
          },
          "terminal.integrated.defaultProfile.linux": "zsh",
          "terminal.integrated.profiles.linux": {
            "bash": {
              "path": "bash",
              "icon": "terminal-bash"
            },
            "zsh": {
              "path": "zsh"
            }
          }
        }
      }
    },
    "remoteUser": "node",
    "mounts": [
      "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
      "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume",
      "source=pnpm-store-${devcontainerId},target=/home/node/.local/share/pnpm/store,type=volume",
      "source=turbo-cache-${devcontainerId},target=/workspace/.turbo,type=volume"
    ],
    "containerEnv": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "CLAUDE_CONFIG_DIR": "/home/node/.claude",
      "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
      "TURBO_TELEMETRY_DISABLED": "1",
      "UMASK": "0022",
      "COREPACK_ENABLE_DOWNLOAD_PROMPT": "0"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
    "workspaceFolder": "/workspace",
    "forwardPorts": [3000, 3001, 5173, 8787],
    "portsAttributes": {
      "3000": {
        "label": "web-temp (Next.js)",
        "onAutoForward": "notify"
      },
      "5173": {
        "label": "web (Remix)",
        "onAutoForward": "notify"
      },
      "8787": {
        "label": "api (Cloudflare Workers)",
        "onAutoForward": "notify"
      }
    },
    "postStartCommand": "echo 'DevContainer started successfully'",
    "postCreateCommand": "pnpm install --frozen-lockfile",
    "waitFor": "postStartCommand"
  }